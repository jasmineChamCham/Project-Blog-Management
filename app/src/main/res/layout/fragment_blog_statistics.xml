<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".view.BlogStatisticsFragment">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:elevation="8dp"
            android:layout_marginBottom="5dp"
            tools:ignore="ExtraText">
            <Button
                android:id="@+id/btn_days"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/main_color"
                android:text="DAYS"
                android:textColor="@color/white"
                android:textAllCaps="false"
                android:textSize="17sp"
                ></Button>
            <Button
                android:id="@+id/btn_months"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:text="MONTHS"
                android:textColor="@color/main_color"
                android:textAllCaps="false"
                android:textSize="17sp"
                ></Button>
            <Button
                android:id="@+id/btn_years"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="@color/white"
                android:text="YEARS"
                android:textColor="@color/main_color"
                android:textAllCaps="false"
                android:textSize="17sp"
                ></Button>
            ></LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:elevation="10dp"
            android:padding="5dp"
            app:cardElevation="5dp"
            app:cardCornerRadius="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_blog_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Time"
                    android:layout_marginHorizontal="10dp"
                    android:textStyle="bold"
                    android:textSize="20dp">
                </TextView>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:elevation="10dp"
            android:padding="5dp"
            app:cardElevation="5dp"
            app:cardCornerRadius="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <com.github.mikephil.charting.charts.BarChart
                    android:id="@+id/bc_blog"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                </com.github.mikephil.charting.charts.BarChart>
                <LinearLayout
                    android:id="@+id/tv_comment_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:elevation="8dp"
                    android:layout_marginBottom="5dp">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_views"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:gravity="center"
                                android:layout_weight="1"
                                android:text="Comments">
                            </TextView>
                            <TextView
                                android:id="@+id/tv_cmt_count"
                                android:layout_width="match_parent"
                                android:textSize="20dp"
                                android:gravity="center"
                                android:layout_height="0dp"
                                android:textStyle="bold"
                                android:layout_weight="2"
                                android:text="100">
                            </TextView>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cv_likes"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:gravity="center"
                                android:layout_weight="1"
                                android:text="Likes">
                            </TextView>
                            <TextView
                                android:id="@+id/tv_likes_count"
                                android:layout_width="match_parent"
                                android:textSize="20dp"
                                android:gravity="center"
                                android:layout_height="0dp"
                                android:textStyle="bold"
                                android:layout_weight="2"
                                android:text="100">
                            </TextView>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>