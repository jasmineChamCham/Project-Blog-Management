<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    >
    <data>
        <variable name="blog" type="com.example.blogapp.model.Blog"/>
        <variable name="user" type="com.example.blogapp.model.User"/>
    </data>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            tools:context=".view.DetailBlogFragment">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="15dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Blog category"
                    android:textSize="13sp"
                    android:textColor="@color/main_color"
                    android:layout_marginBottom="10dp"
                    ></TextView>
                <Button
                    android:id="@+id/category_option"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:backgroundTint="#52B8E6"
                    android:text="@{blog.category}"
                    android:textColor="#FFFFFF"
                    android:textAllCaps="false"
                    android:textSize="15sp"
                    android:layout_marginLeft="8dp"
                    app:cornerRadius="7dp"
                    ></Button>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="15dp"
                >
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/person_avatar"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/circleImageView"
                    ></com.google.android.material.imageview.ShapeableImageView>
                <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@{user.name}"
                    android:textColor="@color/black"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    ></TextView>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_follow"
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center"
                    android:backgroundTint="@color/white"
                    app:cornerRadius="15dp"
                    android:text="Following"
                    android:textSize="11sp"
                    android:textAllCaps="false"
                    android:textColor="@color/main_color"
                    app:strokeColor="@color/main_color"
                    app:strokeWidth="1dp"
                    android:layout_marginLeft="10dp"
                    ></com.google.android.material.button.MaterialButton>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@{blog.title}"
                android:textColor="@color/black"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginBottom="7dp"
                ></TextView>
            <TextView
                android:id="@+id/tv_content"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Content"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginBottom="7dp"
                ></TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="8dp"
                >
                <Button
                    android:id="@+id/btn_like"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:backgroundTint="@color/white"
                    android:drawableLeft="@drawable/ic_baseline_thumb_up_off_alt_24"
                    android:text="Like"
                    android:textColor="@color/main_color"
                    android:textAllCaps="false"
                    android:textSize="13sp"
                    app:cornerRadius="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    ></Button>
                <Button
                    android:id="@+id/btn_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:backgroundTint="@color/white"
                    android:drawableLeft="@drawable/ic_baseline_chat_bubble_outline_24"
                    android:text="Comment"
                    android:textColor="@color/main_color"
                    android:textAllCaps="false"
                    android:textSize="13sp"
                    app:cornerRadius="10dp"
                    android:layout_weight="1"
                    ></Button>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</layout>
