        android:id="@+id/signupFragment"
        android:name="com.example.blogapp.view.SignupFragment"
        android:label="fragment_signup"
        tools:layout="@layout/fragment_signup" >
        <action
            android:id="@+id/action_signupFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/authorProfileFragment"
        android:name="com.example.blogapp.view.AuthorProfileFragment"
        android:label="fragment_author_profile"
        tools:layout="@layout/fragment_author_profile" >
        <action
            android:id="@+id/action_authorProfileFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_authorProfileFragment_to_likesFragment"
            app:destination="@id/likesFragment" />
        <action
            android:id="@+id/action_authorProfileFragment_to_exploreFragment"
            app:destination="@id/exploreFragment" />
    </fragment>
</navigation>