<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/read_blog_nav"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.blogapp.view.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_detailBlogFragment"
            app:destination="@id/detailBlogFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailBlogFragment"
        android:name="com.example.blogapp.view.DetailBlogFragment"
        android:label="fragment_detail_blog"
        tools:layout="@layout/fragment_detail_blog" >
        <action
            android:id="@+id/action_detailBlogFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_detailBlogFragment_to_commentFragment"
            app:destination="@id/commentFragment" />
    </fragment>
    <fragment
        android:id="@+id/commentFragment"
        android:name="com.example.blogapp.view.CommentFragment"
        android:label="fragment_comment"
        tools:layout="@layout/fragment_comment" >
        <action
            android:id="@+id/action_commentFragment_to_detailBlogFragment"
            app:destination="@id/detailBlogFragment" />
    </fragment>
</navigation>